<div class="container">
  <div class="row m-3">
    <div class="col p-3">
      <h1>ユーザー詳細</h1>
  <div class="row">
    <ul>
      <li>
        <strong>Profile</strong>
        <br>
        <%= image_tag @user.get_icon_image(100,100),class:"icon" %>
      </li>
      <li>
        name：<%= @user.user_name %>
      <br>
        user_id：<%= @user.id %>
      </li>
      <li>
        <% if @user.email == 'guest@example.com'%>
          <p>※ゲストユーザーはユーザー情報の編集ができません。</p>
        <% else %>
          <%= link_to "", users_information_edit_path, class: "fa-solid fa-gear" %>
        <% end %>
          <%= link_to "", favorites_users_path, class: "fa-solid fa-heart" %>
          <%= link_to "", room_path(@user), class: "fa-solid fa-envelope" %>
          <%= link_to "", new_post_path, class: "fa-solid fa-pen-to-square" %>
      </li>
      <li>
        follow: <%= @user.followings.count %>
      <br>
        follower: <%= @user.followers.count %>
      </li>
      <li>
        <%= render "relationships/btn", user: @user, options: { class: "follow-link" } %>
      </li>
    
      <li>
        <% if current_user != @user %>
          <%= link_to 'chatを始める', chat_path(@user.id)%>
        <% end %>
      </li>
    </ul>
  </div>
  
  <div class="row">
    <% @posts.each do |post| %>
      <div>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image(350,350) %>
        <% end %>
      </div>
    <% end %>
  </div>
  
    </div>
  </div>
</div>