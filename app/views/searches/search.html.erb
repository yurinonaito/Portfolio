<div class="container">
  <div class="row my-3">
    <div class="col">
      <%= render partial: "searchform" %>
      <h1>Results index</h1>
      
      <h2>#<%= @tag %></h2>
      
      <table class="table table-hover table-inverse">
        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user.user_name, user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
        <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがpostの時) -->
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post_path(post.id) do %>
                  <%= image_tag post.get_image(300,300) %>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>