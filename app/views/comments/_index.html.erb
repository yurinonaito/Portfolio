         <table>
          <tbody>
            <% post.comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to user_path(comment.user) do %>
                <%= image_tag comment.user.get_icon_image(50,50),class:"icon" %><br>
                <%= comment.user.user_name %>
                <% end %>
              </td>
              <td>
                <%= comment.comment %>
              </td>
              <td>
                <% if comment.user == current_user %>
                <%= link_to "Destroy", post_comment_path(post, comment), method: :delete, class: "btn btn-sm btn-danger float-end" %>
                <% end %>
              </td>
            </tr>
           <% end %>
          </tbody>
         </table>