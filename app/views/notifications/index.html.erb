<div class="container">
  <div class="row m-3">
    <div class="col p-3">
      <h1>Notifications</h1>
<h5>通知</h5>
  <% if @notifications.present? %>
    <%= link_to "全削除",notification_path(@notifications), method: :delete,class:"btn btn-light, style: padding: 2px 2px;" %>
    <% @notifications.each do |notification| %>
        <%= render "#{notification.action_type}", notification: notification %>
    <% end %>
  <% else %>
    通知はありません
  <% end %>
    </div>
  </div>
</div>
