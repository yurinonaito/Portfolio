<div class="container">
  <div class="row m-3">
    <div class="col p-3">
      <h5><%= image_tag current_user.get_icon_image(100,100),class:"icon" %> 　通知</h5>
      <br>
      <% if @notifications.present? %>
        <%= link_to "全削除",notification_path(@notifications), method: :delete, class: "button-14", role: "button", style: "margin-top: 2px;" %>
        <br>
        <br>
        <% @notifications.each do |notification| %>
          <%= render "#{notification.action_type}", notification: notification %>
        <% end %>
      <% else %>
        通知はありません
      <% end %>
    </div>
  </div>
</div>
