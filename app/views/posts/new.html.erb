<div class="container">
  <div class="row m-3">
    <div class="col p-3">
      
      <%= image_tag current_user.get_icon_image(100,100),class:"icon" %><br

      <%= form_with model: @post,url: posts_path do |f| %>
      
  <div class="form-group row">
    <label for="inputImage" class="col-sm-2 col-form-label">投稿画像</label>
    <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  
  <div class="form-group row">
    <label for="inputCaption" class="col-sm-2 col-form-label">投稿文</label>
    <div class="col-sm-10">
      <%= f.text_area :caption, placeholder:"文章を記入する際に『＃』を使用すると検索されやすくなります", class: "w-100", rows: 10 %>
    </div>
  </div>
  
  
  <div class="form-group row">
    <label for="inputPostUrl" class="col-sm-2 col-form-label">投稿URL</label>
    <div class="col-sm-10">
      <%= f.text_field :post_url, placeholder:"投稿するWebサービスのURLを記入してください", class: "w-100" %>
    </div>
  </div>
  
  
  <div class="form-group row">
    <label for="inputCodeUrl" class="col-sm-2 col-form-label">コードURL</label>
    <div class="col-sm-10">
      <%= f.text_field :code_url, placeholder:"コードのURL（Github等）を記入してください", class: "w-100" %>
    </div>
  </div>
  
  
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit">公開する</button>
    </div>
  </div>
      
      <% end %>
    </div>
  </div>
</div>