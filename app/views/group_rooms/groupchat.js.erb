var groupChatBox = $("<div class='group_chat-box'>");
var groupChatFace = $("<div class='group_chat-face'>").append($("<img>").attr("src", "<%= j url_for(@group_chat.user.get_icon_image(100, 100)) %>").addClass("icon"));

var message = "<%= j @group_chat.message %>";
var formattedMessage = message.replace(/\n/g, '<br>');
var timestamp = "<%= j @group_chat.created_at.strftime("%Y-%m-%d %H:%M") %>";
var groupChatHukidashi = $("<div class='group_chat-hukidashi'>")
  .html("<strong>" + formattedMessage + "</strong><br>" + timestamp);
  
groupChatBox.append(groupChatFace, groupChatHukidashi);
$(".group_chat").append(groupChatBox);
$('textarea').val("");